# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/smart_grocery_db?schema=public"

# JWT Authentication
# IMPORTANT: Generate a secure secret with: openssl rand -base64 48
# Must be at least 32 characters long
JWT_SECRET=PLEASE_CHANGE_THIS_TO_A_SECURE_64_CHAR_RANDOM_STRING_GENERATED_WITH_OPENSSL
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=debug

# CORS (Frontend URLs - supports multiple environments)
CORS_ORIGIN=http://localhost:3000
# FRONTEND_URL=https://your-app.com (set in production)
# FRONTEND_URL_STAGING=https://staging.your-app.com (set in staging)

# Optional: Gemini AI API (for Phase 8+)
# GEMINI_AI_API_KEY=AIzaSy...

# Optional: Spoonacular API (for recipes)
# SPOONACULAR_API_KEY=your_key_here
